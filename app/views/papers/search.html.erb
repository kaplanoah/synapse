<div class="results">

<h1>Results</h1>

<% if @results.empty? %>
	<p>No articles</p>
<% else %>
		
	<%= form_for(@search) do |s| %>
		<%= s.text_field :x, value: @x %>
		<%= s.text_field :y, value: @y %>
		<%= s.text_field :z, value: @z %>
		<%= s.text_field :range, value: @range %>
		<%= s.submit "Save Search" %>
	<% end %>



<% end %>


<% @results.each do |r| %>

	<% @title = Title.where(:doi => r.doi) %>

	<a href="http://doi.org/<%= r.doi %>" target="_blank" class="title">
		<% if @title[0].title == "Error retrieving title 3" %>
			<%= r.doi %>
		<% else %>	
			<%= @title[0].title %>
		<% end %>
	</a><br>

	<span class="journal"><%= r.journal %></span><br><br>

<% end %>

<%= link_to "Don't see your paper?", new_newpaper_path %>

</div>